# EditorConfig for Hammerspoon Window Manager
# Editor consistency configuration

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.lua]
indent_style = space
indent_size = 2
max_line_length = 100

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 120

[*.{sh,bash}]
indent_style = space
indent_size = 2
